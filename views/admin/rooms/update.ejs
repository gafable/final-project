<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <div class="m-0 font-weight-bold ">
            <a href="/rooms/all">rooms</a> / update
        </div>
    </div>
    <div class="card-body ">
        <form action="/rooms/create" method="POST" enctype="multipart/form-data" id="roomForm">
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="no">Room #</label>
                    <input type="number" class="form-control" id="no" value="<%= room.no %>" name="no" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="floorNo">Floor #</label>
                    <input type="number" class="form-control" value="<%= room.floorNo %>" id="floorNo" name="floorNo" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" value="<%= room.price %>" id="price" name="price" required>
                </div>

            </div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label for="type">Type</label>
                    <select id="type" name="type" class="form-control" required>
                        <option value="room" <% if (room.type === "room") { %>
                            <%= 'selected' %> 
                        <% } %> >Rooms</option>
                        <option value="suite" <% if (room.type === "suite") { %>
                            <%= 'selected' %> 
                        <% } %> >Suite</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="classType">Class Type</label>
                    <select id="classType" name="classType" class="form-control" required>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div class="form-group col-md-4 ">
                    <label for="status">Status</label>
                    <select id="status" name="status" class="form-control" required>
                        <option value="available">Available</option>
                        <option value="under_maintenance">Under maintenance</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Add Image</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" accept="image/*" name="roomImage" required>
                    <label class="custom-file-label" for="customFile">Choose Image for this room</label>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description"> <%= room.description %>  </textarea>
            </div>
            <div class="form-group">
                <label for="features">Features</label>
                <select id="features" name="features[]" class="form-control" multiple title="Choose features for this room ..." data-live-search="true" required>
                    <option data-icon="fa fa-desktop" value="tv"> Free Flatscreen TV</option>
                    <option value="wifi">Wifi</option>
                    <option value="Free Breakfast">Free Break Fast</option>
                    <option value="shower with bathtub">shower with bathtub</option>
                    <option value="flatscreen tv">flatscreen tv</option>
                    <option value="Slippers">Slippers</option>
                    <option value="Coffee & tea facilities">Coffee & tea facilities</option>
                </select>
            </div>


            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>

        </form>
    </div>
</div>


<script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#description'))
        .catch(error => {
            console.error(error);
        });
</script>