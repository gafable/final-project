<!-- Content Row -->

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Personal Info</h6>
            </div>
            <div class="card-body">

                <form action="/accounts/profile/info" method="POST">
                    <div class="form-group row">
                        <label for="firstname" class="col-sm-3 col-form-label col-form-label">Firstname</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="firstName" name="firstname" value="<%= account.accountInfo.firstname  %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastname" class="col-sm-3 col-form-label col-form-label">Lastname</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="lastname" name="lastname">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="middlename" class="col-sm-3 col-form-label col-form-label">Middle Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="middlename" name="middlename">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label col-form-label">Birthday</label>
                        <div class="col-sm-9">
                            <input type="date" class="form-control form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="age" class="col-sm-3 col-form-label col-form-label">Age</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control form-control" id="age" name="age">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-sm-3 col-form-label col-form-label">Address</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="address" name="address">
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary px-5">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Credentials</h6>
            </div>
            <div class="card-body">

                <form action="#!" method="post">
                    <div class="form-group row">
                        <label for="username" class="col-sm-3 col-form-label col-form-label">Username</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="username" name="username">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label col-form-label">Email</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary px-5">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Password</h6>
            </div>
            <div class="card-body">

                <form action="#!" method="post">
                    <div class="form-group row">
                        <label for="currentPassword" class="col-sm-3 col-form-label col-form-label">Current Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control form-control" id="currentPassword" name="currentPassword">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="newPassword" class="col-sm-3 col-form-label col-form-label">New Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control form-control" id="newPassword" name="newPassword">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="confirmPassword" class="col-sm-3 col-form-label col-form-label">Confirm Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control form-control" id="confirmPassword" name="confirmPassword">
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary px-5">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>